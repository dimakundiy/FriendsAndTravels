@model PersonViewModel
@using FriendsAndTravel.Data.Entities
@using FriendsAndTravel.Extensions
@{
    ViewData["Title"] = "Profile";
}
<div class="pull-left">
    <a asp-controller="EditProfile" asp-action="Index" class="btn btn-primary"><span class="fa fa-user"></span>Edit Profile</a>
</div>
<img src="@Model.phot.ToRenderablePictureString()" class="img-circle" height="200" width="200" alt="ProfilePicture">
<form asp-action="Create" asp-controller="Profile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Avatar"></label>
        <input asp-for="Avatar" class="form-control" />
        <span asp-validation-for="Avatar" class="text-danger"></span>
    </div>
    <p>
        <input type="submit" value="Change" />
    </p>
</form>

<h2>UserName: @Model.UserName</h2>
<h2>Email: @Model.Email</h2>
<h2>Age: @Model.Age</h2>
<h2>Phone: @Model.Phone</h2>
