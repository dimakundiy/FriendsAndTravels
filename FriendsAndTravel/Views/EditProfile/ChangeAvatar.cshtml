@using FriendsAndTravel.Models
@using Model.Models
@using FriendsAndTravel.Extensions
@model PersonViewModel
@{
    ViewData["Title"] = "Change Avatar";

}
<h2>Change Avatar</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="ChangeAvatar" asp-controller="EditProfile" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input asp-for="Avatar" class="form-control" />
                <span asp-validation-for="Avatar" class="text-danger"></span>
            </div>
            <p>
                <input class="btn btn-success" type="submit" value="Change" />
            </p>
        </form>
        </div>
</div>
<script>
        document.getElementById("nav-avatar").classList.add("active");
</script>