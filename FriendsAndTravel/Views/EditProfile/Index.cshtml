@using FriendsAndTravel.Models
@using Microsoft.AspNetCore.Mvc.Localization

@model PersonViewModel
@{
    ViewData["Title"] = "Edit Profile";

}

<div class="row">
<div class="col-md-5 ">
    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" enctype="multipart/form-data">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label col-sm-3">UserName: <span class="text-danger"></span></label>
            <div class="input-group">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3">Email: <span class="text-danger"></span></label>
            <div class="input-group">
                <input asp-for="Email" class="form-control" readonly />
                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
            </div>

        </div>
        <div class="form-group">
            <label class="control-label col-sm-3">Phone: <span class="text-danger"></span></label>
            <div class="input-group">
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3">Gender: <span class="text-danger"></span></label>
            <div class="input-group">
                <input asp-for="Gender" class="form-control" readonly />
                <span asp-validation-for="Gender" class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3">Age: <span class="text-danger"></span></label>
            <div class="input-group">
                <input asp-for="Age" class="form-control" readonly />
                <span asp-validation-for="Age" class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
            </div>
        </div>
        <button type="submit" class="btn btn-default">Save</button>
    </form>
</div>
</div>

<script>
    function ShowIvite() {
        document.getElementById("invite").style.display = 'none';

    }
    document.getElementById("nav-index").classList.add("active");
</script>

@section Scripts {

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
