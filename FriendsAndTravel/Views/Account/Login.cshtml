@model FriendsAndTravel.Models.LoginModel
@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Identity
@using FriendsAndTravel.Data.Entities
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@inject SignInManager<User> SignInManager
@{
    ViewData["Title"] = "Log in";
}
<h2 class="text-center">@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <section>
            <form class="form-horizontal"  asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <h4 class="text-center">Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Email: <span class="text-danger"></span></label>
                    <div class="col-md-9 col-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            <input asp-for="Email"  class="form-control" placeholder="Enter your Email:" value="">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Password: <span class="text-danger"></span></label>
                    <div class="col-md-9 col-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control" name="password" id="password" placeholder="Your password:" value="">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Log in</button>
                </div>
                <div class="form-group">       
                    <p>
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
   
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
