
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<link href="~/css/register.css" rel="stylesheet" />
<style>

    body {
        background-image: url("https://images.wallpaperscraft.ru/image/svet_bleklyy_fon_85547_1280x720.jpg");
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

<div class="row text-center">
    <div class="col-md-5 col-md-offset-4">
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" enctype="multipart/form-data">
            <h2 class="text-center">@ViewData["Title"]</h2>
            <h4 class="text-center">Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label col-sm-3">Email: <span class="text-danger">*</span></label>
                <div class="col-md-9 col-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        <input asp-for="Email"  class="form-control" placeholder="Enter your Email:" value="">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-3">UserName <span class="text-danger">*</span></label>
                <div class="col-md-9 col-sm-10">
                    <input asp-for="Username" class="form-control" placeholder="Enter your Name here" value="">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3">Birhday: <span class="text-danger">*</span></label>
                <div class="col-md-9 col-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                        <input asp-for="Birthday" class="form-control" value="">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3">Location: <span class="text-danger">*</span></label>
                <div class="col-md-9 col-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-map-marker"></i></span>
                        <input asp-for="Location" class="form-control" placeholder="Enter the name of your city:" value="">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3">Phone: <span class="text-danger">*</span></label>
                <div class="col-md-9 col-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
                        <input asp-for="Phone" class="form-control"placeholder="Enter your Phone number." value="">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3">Gender: <span class="text-danger">*</span></label>
                <div class="col-md-9 col-sm-10">
                    <select asp-for="Gender" asp-items="Html.GetEnumSelectList<@FriendsAndTravel.Data.Entities.Gender>()" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    </div>
                </div>
            

                <div class="form-group">
                    <label class="control-label col-sm-3">Password: <span class="text-danger">*</span></label>
                    <div class="col-md-9 col-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input asp-for="Password"  class="form-control"  placeholder="Choose password:" value="">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Confirm Password: <span class="text-danger">*</span></label>
                    <div class="col-md-9 col-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input asp-for="ConfirmPassword"  class="form-control"  placeholder="Confirm your password:" value="">
                        </div>
                    </div>
                </div>
                
                    <div class="col-md-6 text-right">
                        <button type="submit" class="btn btn-success"><i class="fa fa-user-plus"></i> Register</button>
                    </div>
</form>
</div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial"),
    <recaptcha-script />
}